{% extends 'base.html.twig' %}

{% block title %}Mon CV - Portfolio R&T{% endblock %}

{% block stylesheets %}
<style>
    .cv-container {
        background: #fff;
        width: 210mm;
        min-height: 297mm;
        margin: 0 auto;
        position: relative;
        box-sizing: border-box;
        overflow: hidden;
        page-break-inside: avoid;
    }
    
    @media print {
        .cv-container {
            width: 210mm;
            height: 297mm;
            overflow: hidden;
        }
    }

    .profile-section {
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
        padding: 2rem;
        color: white;
    }

    .skill-progress {
        height: 8px;
        margin-top: 8px;
        background: #e9ecef;
        border-radius: 4px;
        overflow: hidden;
    }

    .skill-progress .progress-bar {
        background: linear-gradient(90deg, #2193b0, #6dd5ed);
        transition: width 1.5s ease-in-out;
    }

    .experience-item, .formation-item {
        border-left: 3px solid #2193b0;
        padding-left: 20px;
        margin-bottom: 25px;
        position: relative;
    }

    .experience-item::before, .formation-item::before {
        content: '';
        position: absolute;
        left: -9px;
        top: 0;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background: #2193b0;
    }

    .tech-badge {
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        margin: 0 5px 8px 0;
        display: inline-block;
        transition: transform 0.2s;
    }

    .tech-badge:hover {
        transform: translateY(-2px);
    }

    .download-cv-btn {
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 25px;
        transition: all 0.3s;
        cursor: pointer;
    }

    .download-cv-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(33, 147, 176, 0.3);
    }

    .section-title {
        color: #2193b0;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .download-form {
        max-width: 400px;
        margin: 0 auto 20px auto;
    }

    .form-control {
        margin-bottom: 15px;
        padding: 8px;
        border: 1px solid #2193b0;
        border-radius: 4px;
        width: 100%;
    }

    * {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
    }
</style>
{% endblock %}

